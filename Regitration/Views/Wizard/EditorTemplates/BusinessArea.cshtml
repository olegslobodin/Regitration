@model Regitration.ViewModels.BusinessArea


<div class="row">
    <div class="col-sm-2 col-xs-4 text-right">
        @Html.HiddenFor(x => x.Id)
        @Html.CheckBoxFor(x => x.IsChecked, htmlAttributes: new { @class = "big-checkbox" })
    </div>
    <div class="col-sm-10 col-xs-8">
        @Html.LabelFor(x => x.IsChecked, Model.Name, htmlAttributes: new { @class = "control-label" })
        @Html.HiddenFor(x => x.Name)
    </div>
</div>