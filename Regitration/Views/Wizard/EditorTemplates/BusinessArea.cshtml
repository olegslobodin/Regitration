@model Regitration.ViewModels.BusinessArea


<div class="row" style="margin-left:-11px">
    <div class="col-sm-2 col-xs-4 side-paddings-0 text-right">
        @Html.HiddenFor(x => x.Id)
        @Html.CheckBoxFor(x => x.IsChecked, htmlAttributes: new { @class = "big-checkbox" })
    </div>
    <div class="col-sm-10 col-xs-8" style="padding-left: 3px; line-height: 7px">
        @Html.LabelFor(x => x.IsChecked, Model.Name, htmlAttributes: new { @class = "control-label", @style = "font-weight: normal" })
        @Html.HiddenFor(x => x.Name)
    </div>
</div>